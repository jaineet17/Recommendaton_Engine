# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=amazon_rec_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_SCHEMA=amazon_rec

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=amazon-recommendation-service
KAFKA_AUTO_OFFSET_RESET=earliest

# API Configuration
API_HOST=0.0.0.0
API_PORT=5050
API_DEBUG=false
API_WORKERS=4
API_TIMEOUT=120

# Frontend Configuration
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=change_this_in_production
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:5050

# Model Configuration
MODEL_CACHE_SIZE=1000
MODEL_UPDATE_INTERVAL_SECONDS=300
DEFAULT_MODEL=lightgcn

# Monitoring Configuration
PROMETHEUS_METRICS_PORT=8001
ENABLE_METRICS=true

# Stream Processing Configuration
STREAM_PROCESSOR_WORKERS=2
USER_EVENT_WINDOW_MINUTES=30
DATA_DRIFT_THRESHOLD=0.2

# Deployment Configuration
ENVIRONMENT=production
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest 